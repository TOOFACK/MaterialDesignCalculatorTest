<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        style="@style/BaseMPMP"
        android:layout_weight="2"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardElevation="8dp">
        <EditText
            style="@style/BaseMPWC"
            android:layout_gravity="bottom"
            android:background="@null"
            android:gravity="right"
            android:hint="display"
            android:padding="16sp"
            android:textSize="48sp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        style="@style/Vertical"
        android:layout_weight="1">

        <LinearLayout
            style="@style/Horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/but7"
                style="@style/ButtonInput"
                android:text="7" />

            <Button
                android:id="@+id/but8"
                style="@style/ButtonInput"
                android:layout_width="match_parent"
                android:text="8" />

            <Button
                android:id="@+id/but9"
                style="@style/ButtonInput"
                android:text="9" />

            <Button
                android:id="@+id/butDivide"
                style="@style/ButtonInput"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.32"
            android:background="@color/colorWhite"></LinearLayout>


        <LinearLayout
            style="@style/Horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/but4"
                style="@style/ButtonInput"
                android:text="4"
                />

            <Button
                android:id="@+id/but5"
                style="@style/ButtonInput"
                android:text="5" />

            <Button
                android:id="@+id/but6"
                style="@style/ButtonInput"
                android:text="6" />

            <Button
                android:id="@+id/butMultiple"
                style="@style/ButtonInput"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.32"
            android:background="@color/colorWhite"></LinearLayout>

        <LinearLayout
            style="@style/Horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/but1"
                style="@style/ButtonInput"
                android:text="1" />

            <Button
                android:id="@+id/but2"
                style="@style/ButtonInput"
                android:text="2" />

            <Button
                android:id="@+id/but3"
                style="@style/ButtonInput"
                android:text="3" />

            <Button
                android:id="@+id/butPlus"
                style="@style/ButtonInput"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.32"
            android:background="@color/colorWhite"></LinearLayout>

        <LinearLayout
            style="@style/Horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/butDoth"
                style="@style/ButtonInput"
                android:text="." />

            <Button
                android:id="@+id/but"
                style="@style/ButtonInput"
                android:text="0" />

            <Button
                android:id="@+id/butEqually"
                style="@style/ButtonInput"
                android:text="=" />

            <Button
                android:id="@+id/butMinus"
                style="@style/ButtonInput"
                android:text="-" />

            <Button
                android:id="@+id/butCancell"
                style="@style/ButtonInput"
                android:text="ce" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>